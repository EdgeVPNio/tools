  deps)
    install_build_tools
    ;;
  src)
    pull_src
    ;;
  debpak)
    make_debpak
    ;;
  dkrimg)
    make_dkrimg
    ;;
  testbed)
    install_testbed_deps
    ;;
  venv)
    make_venv
    ;;
  xmpp)
    install_openfire
    ;;
  clean)
    do_clean
    ;;
  build_webrtc)
    build_webrtc
    ;;
  build_webrtc_with_release_ubuntu)
